<Window x:Class="proyecto_final.Lista_de_Docentes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proyecto_final"
        mc:Ignorable="d"
        Title="Lista_de_Docentes" Height="450" Width="800">
    <Grid Background="#FF0A194A">
        <TextBlock HorizontalAlignment="Center" Margin="0,41,0,0" TextWrapping="Wrap" Text="Todos los Docentes Registrados" VerticalAlignment="Top" FontSize="20" FontFamily="Cascadia Code SemiBold" Foreground="White"/>
        <TextBox x:Name="List" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="404" Height="186" TextChanged="TextBox_TextChanged"/>
        <Button Content="X" HorizontalAlignment="Left" Margin="734,26,0,0" VerticalAlignment="Top" Height="27" Width="25" Background="Red" BorderBrush="Black" Foreground="White" FontSize="18" Click="Button_Click"/>

    </Grid>
</Window>
